<?xml version="1.0" encoding="UTF-8" ?>
<context xmlns="http://www.isis.cm/config/isis-item"
         xmlns:ls="http://www.isis.cm/config/list-view"
         xmlns:s="http://www.isis.cm/config/isis-search"
         xmlns:e="http://www.isis.cm/config/editor-area">
    <ls:list-view>
        <ls:list>
            <ls:column qualifier="code"  search="false"/>
            <ls:column qualifier="label"  search="false" widget="localized"/>
            <ls:column qualifier="description" search="false"  widget="localized"/>
        </ls:list>
    </ls:list-view>
    <e:editor-area searchKey="code">
        <e:component>
            <e:common>
                <e:form>
                    <e:section columns="2" position="4" name="commons">
                        <e:field qualifier="code" updatable="false"/>
                        <e:field qualifier="label"  widget="localized"/>
                    </e:section>
                    <e:section columns="1" position="2" name="type.KnowledgeType.description.name" header="true">
                        <e:field qualifier="description" widget="localized-area"  />
                    </e:section>
                </e:form>
            </e:common>
        </e:component>
    </e:editor-area>
</context>